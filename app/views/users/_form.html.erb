<div class="form-container">
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :name %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.text_field :name %></div>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :email %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div ><%= f.text_field :email %></div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :password %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.password_field :password %></div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :password_confirmation %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-5 col-sm-10">
    </br>
      <%= f.submit "Submit", class: "btn btn-default"%>
<%end%>
    </div>
  </div>
</form>
</div>

