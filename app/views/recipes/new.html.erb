<h1 class="text-center">Create Your Recipe!</h1>

 <% if @recipe.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @recipe, html: {miltipart: true}, url: user_recipes_path(params[:user_id]), method: :post do |f| %>

  <form class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :name %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.text_field :name %></div>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :instruction %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div ><%= f.text_area :instruction %></div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label "Portion Size" %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.text_field :feeds %></div>
  </div>

  <div class="form-group col-sm-2 col-md-offset-5">
    <%= f.label :price %>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= f.number_field :price, class: "form-control" %>
      <div class="input-group-addon">.00</div>
    </div>
  </div>

  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :image %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.file_field :image%></div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-5 col-sm-10">
    </br>
      <%= f.submit "Submit", class: "btn btn-default"%>
<%end%>
    </div>
  </div>
</form>
