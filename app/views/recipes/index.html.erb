<h1>Recipes</h1>

<ul>
    <% @recipes.each do |recipe| %>
        <li>
            <strong><%= link_to recipe.name, user_recipe_path(current_user.id, recipe.id) %>
            </strong>
              <%= link_to "Edit", edit_user_recipe_path(current_user.id, recipe.id) %>
              <%= link_to "Delete", user_recipe_path(current_user.id, recipe.id), method: :delete, data: { confirm: "Are you sure ?"} %>
              <div class= "image"><%= recipe.image %></div>
        </li>
    <% end %>
</ul>
<button><h4><%= link_to "Add a Recipe!", new_user_recipe_path(current_user.id)%></h4></button>
