
<h1 class="text-center">Ingredient:</h1>

<%= form_for @ingredient, url: user_recipe_ingredients_path, method: :post do |f| %>
  <% if @ingredient.errors.any? %>
    <div class="error_messages">
      <h2><small>Oops! Form is invalid</small></h2>
      <ul>
        <% for message in @ingredient.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :name %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.text_field :name %></div>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :portion %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div ><%= f.number_field :portion %></div>
  </div>
  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label "Unit of measure:" %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.text_field :p_unit_of_measure %></div>
  </div>

  <div class="form-group">
      <div class="col-sm-2 control-label col-md-offset-5"><%= f.label :brand %></div>
    <div class="col-sm-10 col-md-offset-5">
      <div><%= f.text_field :brand %></div>
  </div>



  <div class="form-group">
    <div class="col-md-offset-5 col-sm-10">
    </br>
      <%= f.submit "Submit", class: "btn btn-default"%>
<%end%>
    </div>
  </div>
</form>
